@model IEnumerable<CART_ME.Models.ProductsModel>

@{
    ViewBag.Title = "GetProducts";
}

<h3>Products</h3>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover table-bordered table-responsive">
    <tr class="btn-danger">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RetailPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantityInStock)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RetailPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityInStock)
                </td>
                <td>
                    <button type="button" class="btn btn-success btn-sm text-white">
                        @Html.ActionLink("Edit", "Edit", new { id = item.id })
                    </button> |
                    <button type="button" class="btn btn-danger btn-sm text-white">
                        @Html.ActionLink("Delete", "Delete", new { id = item.id })
                    </button>
                </td>
            </tr>
        }
    }
    else
    {
        <p>NotFound</p>
    }


</table>
